<resources>
    <declare-styleable name="kz_style">
        <attr name="kzFont">
            <enum name="regular" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="italic_bold" value="2"/>
        </attr>
        <attr name="kzBackgroundButton">
            <enum name="normal" value="0"/>
            <enum name="kz" value="1"/>
            <enum name="transparent_border_gray" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="arcThickness" format="dimension"/>
        <attr name="progress" format="integer"/>
        <attr name="progressColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="kzShareButton">
        <attr name="buttonBackground" format="color" />
        <attr name="textColor" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SelectionTile">
        <attr name="customLayout" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TaggedTile">
        <attr name="hiddenTag" format="boolean" />
        <attr name="tagColor" format="color" />
    </declare-styleable>
</resources>