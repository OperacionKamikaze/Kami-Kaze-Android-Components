<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <es.kamikaze.components.KzTextView
        android:id="@+id/kztvFieldName"
        style="@style/KZTextMediumRegularStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ataque" />

    <es.kamikaze.components.KzTextView
        android:id="@+id/kztvFieldValue"
        style="@style/KZTextXXLargeBoldStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/kztvFieldName"
        app:layout_constraintStart_toStartOf="@+id/kztvFieldName"
        app:layout_constraintTop_toBottomOf="@+id/kztvFieldName"
        tools:text="234" />
</androidx.constraintlayout.widget.ConstraintLayout>